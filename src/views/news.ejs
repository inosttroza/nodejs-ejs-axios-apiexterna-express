<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ino News</title>
    <link rel='icon' href='/img/favicon.ico' class='js-favicon'>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
</head>

<body>
    <header class="header">
        <div class="header__logo">Portal de noticias- Node.Js/ EJS</div>
        <%- include('./partials/search.ejs') %>
    </header>

    <div class="wrapper">
        <div class="news">
            <% if(articles !=null) { %>

                <% let ide=0; %>

                    <% articles.forEach(function(x) { %>

                            <a href="/article/<%- ide %>" class="news__card">
                            <img src="<%- x.urlToImage %>" alt="<%- x.title %>">
                            <h2><%- x.title %></h2>
                            <!-- <h3><%- ide %></h3> -->
                            <p><%- x.description %></p>
                        </a>
                        <% ide++; %>
                    <% }) %>

            <% } else { %>
                No posts found.
                <% } %>
        </div>
    </div>
</body>

</html>